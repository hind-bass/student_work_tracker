{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center" style="margin-top: 3rem;">
            <div class="col-md-7 col-lg-6">
                {# Card d'inscription #}
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        {# En-tête #}
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="bi bi-person-plus-fill text-primary" style="font-size: 3rem;"></i>
                            </div>
                            <h1 class="h3 mb-2 fw-bold">Créer un compte</h1>
                            <p class="text-muted mb-0">Rejoignez-nous pour organiser vos travaux</p>
                        </div>

                        {# Formulaire d'inscription #}
                        {{ form_start(registrationForm) }}

                        {# Nom et Prénom sur la même ligne #}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.firstName, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Ex: Jean'
                                    }
                                }) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(registrationForm.lastName, {
                                    'attr': {
                                        'class': 'form-control form-control-lg',
                                        'placeholder': 'Ex: DUPONT'
                                    }
                                }) }}
                            </div>
                        </div>

                        {# Email #}
                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': 'votre.email@universite.fr'
                                }
                            }) }}
                        </div>

                        {# Mot de passe #}
                        <div class="mb-3">
                            {{ form_row(registrationForm.password.first, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                        </div>

                        {# Confirmation mot de passe #}
                        <div class="mb-4">
                            {{ form_row(registrationForm.password.second, {
                                'attr': {
                                    'class': 'form-control form-control-lg',
                                    'placeholder': '••••••••'
                                }
                            }) }}
                        </div>

                        {# Exigences du mot de passe #}
                        <div class="alert alert-info d-flex align-items-start mb-4">
                            <i class="bi bi-info-circle-fill me-2 mt-1"></i>
                            <div>
                                <strong>Exigences du mot de passe :</strong>
                                <ul class="mb-0 mt-2 small">
                                    <li>Minimum 8 caractères</li>
                                    <li>Au moins une lettre majuscule</li>
                                    <li>Au moins une lettre minuscule</li>
                                    <li>Au moins un chiffre</li>
                                </ul>
                            </div>
                        </div>

                        {# Bouton d'inscription #}
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="bi bi-person-check me-2"></i> S'inscrire
                        </button>

                        {# Séparateur #}
                        <div class="text-center my-4">
                            <div class="d-flex align-items-center">
                                <hr class="flex-grow-1">
                                <span class="px-3 text-muted small">OU</span>
                                <hr class="flex-grow-1">
                            </div>
                        </div>

                        {# Lien de connexion #}
                        <div class="text-center">
                            <p class="text-muted mb-2">Vous avez déjà un compte ?</p>
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Se connecter
                            </a>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>

                {# Info supplémentaire #}
                <div class="text-center mt-4">
                    <p class="text-muted small">
                        <i class="bi bi-shield-check me-1"></i> En créant un compte, vous acceptez nos conditions d'utilisation
                    </p>
                </div>
            </div>
        </div>
    </div>

    {# Style personnalisé #}
    {% block stylesheets %}
        {{ parent() }}
        <style>
            body {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .card {
                border-radius: 20px !important;
            }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

            .btn-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: none;
            }

            .btn-primary:hover {
                background: linear-gradient(135deg, #5568d3 0%, #6941a5 100%);
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            }

            .alert-info {
                background-color: #e7f3ff;
                border-color: #b3d9ff;
                color: #004085;
            }
        </style>
    {% endblock %}
{% endblock %}
