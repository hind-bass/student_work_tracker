{# templates/registration/register.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription - Gestionnaire Universitaire</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        :root {
            --primary: #865749;
            --accent: #C0876A;
            --dark: #473D43;
            --darker: #2D2326;
            --slate: #958377;
            --beige: #A76048;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--slate) 0%, var(--darker) 100%);
            font-family: 'Segoe UI', system-ui, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
            margin: 0;
            overflow-y: auto;
        }

        .register-container {
            width: 100%;
            max-width: 1100px;
            background: rgba(45, 35, 38, 0.85);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(192, 135, 106, 0.2);
            border-radius: 30px;
            overflow: hidden;
            display: flex;
            box-shadow: 0 25px 50px rgba(0,0,0,0.5);
            animation: fadeIn 0.8s ease;
        }

        .form-side {
            flex: 1.2;
            padding: 3rem;
            color: #fff;
        }

        .info-side {
            flex: 0.8;
            background: linear-gradient(135deg, var(--primary), var(--darker));
            padding: 3rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: #fff;
        }

        .page-title {
            font-size: 2.2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #fff, var(--accent));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .form-label {
            color: var(--beige);
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(192, 135, 106, 0.2);
            border-radius: 12px;
            padding: 0.75rem 1rem;
            color: #fff;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(192, 135, 106, 0.1);
            color: #fff;
        }

        .btn-register {
            width: 100%;
            background: linear-gradient(135deg, var(--accent), var(--beige));
            border: none;
            padding: 1rem;
            border-radius: 15px;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            margin-top: 2rem;
            transition: all 0.3s ease;
        }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(192, 135, 106, 0.3);
        }

        .benefit-item {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .benefit-icon {
            width: 50px;
            height: 50px;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--accent);
            font-size: 1.5rem;
        }

        .login-link {
            text-align: center;
            margin-top: 1.5rem;
            color: rgba(255,255,255,0.6);
        }

        .login-link a {
            color: var(--accent);
            text-decoration: none;
            font-weight: 600;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 992px) {
            .register-container { flex-direction: column; }
            .info-side { display: none; }
        }
    </style>
</head>
<body>

<div class="register-container">
    <div class="form-side">
        <h1 class="page-title">Créer un compte</h1>
        <p class="text-white-50 mb-4">Rejoignez-nous pour mieux gérer vos études.</p>

        {{ form_start(registrationForm) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Prénom</label>
                    {{ form_widget(registrationForm.firstName) }}
                    <div class="text-danger small">{{ form_errors(registrationForm.firstName) }}</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Nom</label>
                    {{ form_widget(registrationForm.lastName) }}
                    <div class="text-danger small">{{ form_errors(registrationForm.lastName) }}</div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">Adresse Email</label>
            {{ form_widget(registrationForm.email) }}
            <div class="text-danger small">{{ form_errors(registrationForm.email) }}</div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Mot de passe</label>
                    {# Correction ici : password au lieu de plainPassword #}
                    {{ form_widget(registrationForm.password.first) }}
                    <div class="text-danger small">{{ form_errors(registrationForm.password.first) }}</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label">Confirmation</label>
                    {# Correction ici : password au lieu de plainPassword #}
                    {{ form_widget(registrationForm.password.second) }}
                    <div class="text-danger small">{{ form_errors(registrationForm.password.second) }}</div>
                </div>
            </div>

        </div>

        <button type="submit" class="btn-register">
            <i class="bi bi-person-plus-fill me-2"></i>S'inscrire gratuitement
        </button>
        {{ form_end(registrationForm) }}

        <div class="login-link">
            Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
        </div>
    </div>

    <div class="info-side">
        <div class="benefit-item">
            <div class="benefit-icon"><i class="bi bi-lightning-charge"></i></div>
            <div>
                <h5 class="mb-1">Rapide & Efficace</h5>
                <p class="small text-white-50 mb-0">Organisez vos travaux en quelques clics seulement.</p>
            </div>
        </div>
        <div class="benefit-item">
            <div class="benefit-icon"><i class="bi bi-graph-up-arrow"></i></div>
            <div>
                <h5 class="mb-1">Suivez vos progrès</h5>
                <p class="small text-white-50 mb-0">Visualisez vos performances avec nos statistiques.</p>
            </div>
        </div>
        <div class="benefit-item">
            <div class="benefit-icon"><i class="bi bi-shield-check"></i></div>
            <div>
                <h5 class="mb-1">Sécurité maximale</h5>
                <p class="small text-white-50 mb-0">Vos données personnelles sont protégées et cryptées.</p>
            </div>
        </div>
    </div>
</div>

</body>
</html>
