{# templates/pomodoro/index.html.twig - VERSION MODERNE AVEC HEADER UNIFI√â #}
{% extends 'base.html.twig' %}

{% block title %}Pomodoro Timer - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid px-4 py-4">
        {# ============================================
           ‚è±Ô∏è EN-T√äTE UNIFI√â
           ============================================ #}
        <div class="row mb-4">
            <div class="col-lg-8">
                <h1 class="h2 mb-2 text-white">
                    <i class="bi bi-clock-history me-2" style="color: var(--accent);"></i>
                    Pomodoro Timer
                </h1>
                <p class="text-white-50 mb-0">
                    G√©rez votre temps avec la technique Pomodoro
                </p>
            </div>
        </div>

        {# ============================================
           ‚è±Ô∏è TIMER PRINCIPAL
           ============================================ #}
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="card shadow-lg">
                    <div class="card-body p-5 text-center">
                        {# S√©lecteur de mode #}
                        <div class="d-flex justify-content-center gap-2 mb-4 flex-wrap">
                            <button class="mode-btn active" data-mode="focus" data-minutes="25">
                                <i class="bi bi-lightning-charge me-1"></i> Focus (25 min)
                            </button>
                            <button class="mode-btn" data-mode="short" data-minutes="5">
                                <i class="bi bi-cup-hot me-1"></i> Pause (5 min)
                            </button>
                            <button class="mode-btn" data-mode="long" data-minutes="40">
                                <i class="bi bi-rocket me-1"></i> Deep Work (40 min)
                            </button>
                            <button class="mode-btn" data-mode="break" data-minutes="10">
                                <i class="bi bi-tree me-1"></i> Long Break (10 min)
                            </button>
                        </div>

                        {# Timer Display #}
                        <div class="timer-label text-white-50 mb-3" id="timerLabel">Session de Focus</div>
                        <div class="timer-time text-white mb-4" id="timerTime">25:00</div>

                        {# Progress Bar #}
                        <div class="progress mb-4" style="height: 10px; background: rgba(45, 35, 38, 0.5);">
                            <div class="progress-bar" id="progressBar"
                                 style="width: 100%; background: linear-gradient(90deg, var(--accent), var(--beige));"></div>
                        </div>

                        {# Controls #}
                        <div class="d-flex justify-content-center gap-3">
                            <button class="btn btn-primary btn-lg px-5" id="startBtn">
                                <i class="bi bi-play-fill me-2"></i> Commencer
                            </button>
                            <button class="btn btn-outline-secondary btn-lg" id="resetBtn">
                                <i class="bi bi-arrow-clockwise me-2"></i> R√©initialiser
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# ============================================
           üìä STATISTIQUES
           ============================================ #}
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-check-circle-fill fs-1 mb-2" style="color: var(--success);"></i>
                        <h3 class="mb-0 text-white" id="completedSessions">0</h3>
                        <small class="text-white-50">Sessions Termin√©es</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-clock-fill fs-1 mb-2" style="color: var(--accent);"></i>
                        <h3 class="mb-0 text-white" id="totalMinutes">0</h3>
                        <small class="text-white-50">Minutes de Focus</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <i class="bi bi-trophy-fill fs-1 mb-2" style="color: var(--warning);"></i>
                        <h3 class="mb-0 text-white" id="streakDays">0</h3>
                        <small class="text-white-50">Jours Cons√©cutifs</small>
                    </div>
                </div>
            </div>
        </div>

        {# ============================================
           ‚öôÔ∏è PARAM√àTRES
           ============================================ #}
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 text-white">
                            <i class="bi bi-gear-fill me-2" style="color: var(--accent);"></i>
                            Personnalisation
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-white">
                                        <i class="bi bi-bell-fill me-2" style="color: var(--accent);"></i>
                                        Notifications sonores
                                    </span>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="soundToggle" checked>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-white">
                                        <i class="bi bi-repeat me-2" style="color: var(--accent);"></i>
                                        D√©marrage automatique
                                    </span>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="autoStartToggle">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Info Technique Pomodoro #}
                <div class="alert alert-info mt-4" style="background: rgba(192, 135, 106, 0.2); border-left: 4px solid var(--accent); backdrop-filter: blur(10px);">
                    <i class="bi bi-info-circle-fill me-2" style="color: var(--accent);"></i>
                    <strong>Technique Pomodoro :</strong> Travaillez avec concentration pendant 25 minutes, puis prenez une pause de 5 minutes. Apr√®s 4 sessions, prenez une longue pause de 15-30 minutes.
                </div>
            </div>
        </div>
    </div>

    {% block stylesheets %}
        {{ parent() }}
        <style>
            /* Mode Buttons */
            .mode-btn {
                background: rgba(192, 135, 106, 0.2);
                border: 2px solid var(--accent);
                color: white;
                padding: 0.6rem 1.2rem;
                border-radius: 12px;
                transition: all 0.3s ease;
                cursor: pointer;
                font-weight: 500;
            }

            .mode-btn:hover {
                background: rgba(192, 135, 106, 0.3);
                transform: translateY(-2px);
            }

            .mode-btn.active {
                background: linear-gradient(135deg, var(--accent), var(--beige));
                border-color: var(--beige);
                font-weight: 600;
            }

            /* Timer Display */
            .timer-label {
                font-size: 1.5rem;
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 2px;
            }

            .timer-time {
                font-size: 6rem;
                font-weight: 800;
                font-variant-numeric: tabular-nums;
                text-shadow: 0 0 30px rgba(192, 135, 106, 0.3);
            }

            /* Switch personnalis√© */
            .form-check-input:checked {
                background-color: var(--accent);
                border-color: var(--accent);
            }

            @media (max-width: 768px) {
                .timer-time {
                    font-size: 4rem;
                }
            }
        </style>
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script>
            // √âtat du timer
            let timerInterval = null;
            let timeRemaining = 25 * 60; // en secondes
            let totalTime = 25 * 60;
            let isRunning = false;
            let currentMode = 'focus';

            // Statistiques (localStorage)
            let stats = {
                completedSessions: parseInt(localStorage.getItem('completedSessions') || '0'),
                totalMinutes: parseInt(localStorage.getItem('totalMinutes') || '0'),
                streakDays: parseInt(localStorage.getItem('streakDays') || '0')
            };

            // √âl√©ments DOM
            const timerLabel = document.getElementById('timerLabel');
            const timerTime = document.getElementById('timerTime');
            const progressBar = document.getElementById('progressBar');
            const startBtn = document.getElementById('startBtn');
            const resetBtn = document.getElementById('resetBtn');
            const modeButtons = document.querySelectorAll('.mode-btn');

            // Sons (base64 simplifi√©s)
            const completeSound = new Audio('data:audio/wav;base64,UklGRnoGAABXQVZFZm10IBAAAAABAAEAQB8AAEAfAAABAAgAZGF0YQoGAACBhYqFbF1fdJivrJBhNjVgodDbq2EcBj+a2/LDciUFLIHO8tiJNwgZaLvt559NEAxQp+PwtmMcBjiR1/LMeSwFJHfH8N2QQAoUXrTp66hVFApGn+DyvmwhBjiR1/LMeSwFJHfH8N2QQAo=');

            // Initialisation
            updateDisplay();
            updateStats();

            // Event Listeners - Mode Buttons
            modeButtons.forEach(btn => {
                btn.addEventListener('click', () => {
                    if (isRunning) return;

                    modeButtons.forEach(b => b.classList.remove('active'));
                    btn.classList.add('active');

                    currentMode = btn.dataset.mode;
                    const minutes = parseInt(btn.dataset.minutes);
                    timeRemaining = minutes * 60;
                    totalTime = minutes * 60;

                    updateDisplay();
                    updateLabel();
                });
            });

            // Start/Pause Button
            startBtn.addEventListener('click', () => {
                if (isRunning) {
                    pauseTimer();
                } else {
                    startTimer();
                }
            });

            // Reset Button
            resetBtn.addEventListener('click', () => {
                resetTimer();
            });

            // Fonctions principales
            function startTimer() {
                isRunning = true;
                startBtn.innerHTML = '<i class="bi bi-pause-fill me-2"></i> Pause';

                timerInterval = setInterval(() => {
                    timeRemaining--;
                    updateDisplay();

                    if (timeRemaining <= 0) {
                        completeSession();
                    }
                }, 1000);
            }

            function pauseTimer() {
                isRunning = false;
                startBtn.innerHTML = '<i class="bi bi-play-fill me-2"></i> Reprendre';
                clearInterval(timerInterval);
            }

            function resetTimer() {
                pauseTimer();
                const activeBtn = document.querySelector('.mode-btn.active');
                const minutes = parseInt(activeBtn.dataset.minutes);
                timeRemaining = minutes * 60;
                totalTime = minutes * 60;
                startBtn.innerHTML = '<i class="bi bi-play-fill me-2"></i> Commencer';
                updateDisplay();
            }

            function completeSession() {
                pauseTimer();

                // Jouer le son
                if (document.getElementById('soundToggle').checked) {
                    completeSound.play();
                }

                // Mise √† jour des stats si c'√©tait une session de focus
                if (currentMode === 'focus' || currentMode === 'long') {
                    stats.completedSessions++;
                    stats.totalMinutes += totalTime / 60;
                    saveStats();
                    updateStats();
                }

                // Notification
                if ('Notification' in window && Notification.permission === 'granted') {
                    new Notification('Pomodoro Termin√©!', {
                        body: 'Session termin√©e! Prenez une pause bien m√©rit√©e.',
                    });
                }

                // Auto-d√©marrage
                if (document.getElementById('autoStartToggle').checked) {
                    setTimeout(() => {
                        const nextMode = currentMode === 'focus' ? 'short' : 'focus';
                        const nextBtn = document.querySelector(`[data-mode="${nextMode}"]`);
                        nextBtn.click();
                        startTimer();
                    }, 3000);
                }
            }

            function updateDisplay() {
                const minutes = Math.floor(timeRemaining / 60);
                const seconds = timeRemaining % 60;
                timerTime.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

                const progress = (timeRemaining / totalTime) * 100;
                progressBar.style.width = progress + '%';
            }

            function updateLabel() {
                const labels = {
                    'focus': 'Session de Focus',
                    'short': 'Courte Pause',
                    'long': 'Deep Work Session',
                    'break': 'Longue Pause'
                };
                timerLabel.textContent = labels[currentMode];
            }

            function updateStats() {
                document.getElementById('completedSessions').textContent = stats.completedSessions;
                document.getElementById('totalMinutes').textContent = stats.totalMinutes;
                document.getElementById('streakDays').textContent = stats.streakDays;
            }

            function saveStats() {
                localStorage.setItem('completedSessions', stats.completedSessions);
                localStorage.setItem('totalMinutes', stats.totalMinutes);
                localStorage.setItem('streakDays', stats.streakDays);
            }

            // Demander la permission pour les notifications
            if ('Notification' in window && Notification.permission === 'default') {
                Notification.requestPermission();
            }

            // Raccourcis clavier
            document.addEventListener('keydown', (e) => {
                if (e.code === 'Space') {
                    e.preventDefault();
                    startBtn.click();
                } else if (e.code === 'KeyR') {
                    e.preventDefault();
                    resetBtn.click();
                }
            });
        </script>
    {% endblock %}
{% endblock %}
