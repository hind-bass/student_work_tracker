<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pomodoro Timer - Focus & Productivity</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary: #865749;
            --accent: #C0876A;
            --dark: #473D43;
            --darker: #2D2326;
            --slate: #958377;
            --beige: #A76048;
        }

        body {
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
            background: linear-gradient(135deg, var(--slate) 0%, var(--darker) 100%);
            min-height: 100vh;
            color: #fff;
        }

        /* Style du Header harmonisé */
        .page-header {
            margin-bottom: 3rem;
            animation: fadeIn 0.6s ease;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--accent), var(--beige));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
        }

        /* Bouton de retour spécial */
        .btn-outline-custom {
            border: 1px solid var(--accent);
            color: var(--accent);
            border-radius: 12px;
            padding: 0.6rem 1.2rem;
            transition: all 0.3s ease;
        }

        .btn-outline-custom:hover {
            background: var(--accent);
            color: white;
            transform: translateX(-5px);
        }

        /* Timer Container & Circle */
        .timer-container {
            background: rgba(71, 61, 67, 0.4); /* --dark */
            backdrop-filter: blur(20px);
            border: 1px solid rgba(192, 135, 106, 0.3); /* --accent */
            border-radius: 30px;
            padding: 3rem;
            text-align: center;
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
        }

        .timer-circle {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 8px solid rgba(192, 135, 106, 0.1); /* --accent soft */
            margin: 2rem auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
            background: radial-gradient(circle, rgba(134, 87, 73, 0.1) 0%, transparent 70%);
        }

        .timer-display {
            font-size: 5rem;
            font-weight: 800;
            font-variant-numeric: tabular-nums;
            text-shadow: 0 0 30px rgba(192, 135, 106, 0.3);
        }

        /* Stats Cards */
        .stat-card {
            background: rgba(45, 35, 38, 0.4); /* --darker */
            border: 1px solid rgba(192, 135, 106, 0.2);
            border-radius: 20px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            border-color: var(--accent);
            transform: translateY(-5px);
        }

        .stat-value {
            color: var(--accent);
            font-size: 1.8rem;
            font-weight: 700;
        }

        /* Mode Buttons (Work/Break) */
        .mode-btn {
            background: rgba(134, 87, 73, 0.2); /* --primary */
            border: 1px solid var(--primary);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .mode-btn.active {
            background: var(--accent);
            border-color: var(--accent);
        }

        /* Start/Reset Buttons */
        .btn-start {
            background: linear-gradient(135deg, var(--primary), var(--dark));
            border: none;
            padding: 1rem 3rem;
            font-size: 1.25rem;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(134, 87, 73, 0.3);
        }

        .btn-start:hover {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(134, 87, 73, 0.4);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
<!-- Navigation -->
<nav class="navbar navbar-expand-lg">
    <div class="container-fluid px-4">
        <a class="navbar-brand" href="/">
            <i class="bi bi-clock-history me-2"></i>
            Pomodoro Timer
        </a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="bi bi-speedometer2 me-1"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/assignment">
                        <i class="bi bi-card-checklist me-1"></i> Travaux
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="/pomodoro">
                        <i class="bi bi-clock-history me-1"></i> Pomodoro
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Container Principal -->
<div class="pomodoro-container">
    <!-- Card Timer -->
    <div class="timer-card" id="timerCard">
        <!-- Mode Selector -->
        <div class="mode-selector">
            <button class="mode-btn active" data-mode="focus" data-minutes="25">
                <i class="bi bi-lightning-charge"></i> Focus (25 min)
            </button>
            <button class="mode-btn" data-mode="short" data-minutes="5">
                <i class="bi bi-cup-hot"></i> Pause (5 min)
            </button>
            <button class="mode-btn" data-mode="long" data-minutes="40">
                <i class="bi bi-rocket"></i> Deep Work (40 min)
            </button>
            <button class="mode-btn" data-mode="break" data-minutes="10">
                <i class="bi bi-tree"></i> Long Break (10 min)
            </button>
        </div>

        <!-- Timer Display -->
        <div class="timer-display">
            <div class="timer-label" id="timerLabel">Session de Focus</div>
            <div class="timer-time" id="timerTime">25:00</div>
            <div class="timer-progress">
                <div class="timer-progress-bar" id="progressBar" style="width: 100%"></div>
            </div>
        </div>

        <!-- Controls -->
        <div class="timer-controls">
            <button class="control-btn" id="startBtn">
                <i class="bi bi-play-fill"></i>
                <span>Commencer</span>
            </button>
            <button class="control-btn reset-btn" id="resetBtn">
                <i class="bi bi-arrow-clockwise"></i>
                <span>Réinitialiser</span>
            </button>
        </div>
    </div>

    <!-- Statistics -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="stat-value" id="completedSessions">0</div>
            <div class="stat-label">Sessions Terminées</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock-fill"></i>
            </div>
            <div class="stat-value" id="totalMinutes">0</div>
            <div class="stat-label">Minutes de Focus</div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-trophy-fill"></i>
            </div>
            <div class="stat-value" id="streakDays">0</div>
            <div class="stat-label">Jours Consécutifs</div>
        </div>
    </div>

    <!-- Settings Panel -->
    <div class="settings-panel">
        <h3 class="settings-title">
            <i class="bi bi-gear-fill"></i>
            Personnalisation
        </h3>
        <div class="setting-item">
                <span class="setting-label">
                    <i class="bi bi-bell-fill me-2"></i>
                    Notifications sonores
                </span>
            <div class="setting-control">
                <label class="switch">
                    <input type="checkbox" id="soundToggle" checked>
                </label>
            </div>
        </div>
        <div class="setting-item">
                <span class="setting-label">
                    <i class="bi bi-repeat me-2"></i>
                    Démarrage automatique
                </span>
            <div class="setting-control">
                <label class="switch">
                    <input type="checkbox" id="autoStartToggle">
                </label>
            </div>
        </div>
    </div>

    <!-- Alert Info -->
    <div class="alert-custom">
        <i class="bi bi-info-circle-fill"></i>
        <div>
            <strong>Technique Pomodoro :</strong> Travaillez avec concentration pendant 25 minutes, puis prenez une pause de 5 minutes. Après 4 sessions, prenez une longue pause de 15-30 minutes.
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // État du timer
    let timerInterval = null;
    let timeRemaining = 25 * 60; // en secondes
    let totalTime = 25 * 60;
    let isRunning = false;
    let currentMode = 'focus';

    // Statistiques (en localStorage)
    let stats = {
        completedSessions: parseInt(localStorage.getItem('completedSessions') || '0'),
        totalMinutes: parseInt(localStorage.getItem('totalMinutes') || '0'),
        streakDays: parseInt(localStorage.getItem('streakDays') || '0')
    };

    // Éléments DOM
    const timerCard = document.getElementById('timerCard');
    const timerLabel = document.getElementById('timerLabel');
    const timerTime = document.getElementById('timerTime');
    const progressBar = document.getElementById('progressBar');
    const startBtn = document.getElementById('startBtn');
    const resetBtn = document.getElementById('resetBtn');
    const modeButtons = document.querySelectorAll('.mode-btn');

    // Sons
    const tickSound = new Audio('data:audio/wav;base64,');
    const completeSound = new Audio('data:audio/wav;base64,');

    // Initialisation
    updateDisplay();
    updateStats();

    // Event Listeners - Mode Buttons
    modeButtons.forEach(btn => {
        btn.addEventListener('click', () => {
            if (isRunning) return;

            modeButtons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            currentMode = btn.dataset.mode;
            const minutes = parseInt(btn.dataset.minutes);
            timeRemaining = minutes * 60;
            totalTime = minutes * 60;

            updateDisplay();
            updateLabel();
        });
    });

    // Event Listener - Start/Pause Button
    startBtn.addEventListener('click', () => {
        if (isRunning) {
            pauseTimer();
        } else {
            startTimer();
        }
    });

    // Event Listener - Reset Button
    resetBtn.addEventListener('click', () => {
        resetTimer();
    });

    // Fonctions principales
    function startTimer() {
        isRunning = true;
        timerCard.classList.add('timer-active');
        startBtn.innerHTML = '<i class="bi bi-pause-fill"></i><span>Pause</span>';

        timerInterval = setInterval(() => {
            timeRemaining--;
            updateDisplay();

            if (timeRemaining <= 0) {
                completeSession();
            }
        }, 1000);
    }

    function pauseTimer() {
        isRunning = false;
        timerCard.classList.remove('timer-active');
        startBtn.innerHTML = '<i class="bi bi-play-fill"></i><span>Reprendre</span>';
        clearInterval(timerInterval);
    }

    function resetTimer() {
        pauseTimer();
        const activeBtn = document.querySelector('.mode-btn.active');
        const minutes = parseInt(activeBtn.dataset.minutes);
        timeRemaining = minutes * 60;
        totalTime = minutes * 60;
        startBtn.innerHTML = '<i class="bi bi-play-fill"></i><span>Commencer</span>';
        updateDisplay();
    }

    function completeSession() {
        pauseTimer();

        // Jouer le son
        if (document.getElementById('soundToggle').checked) {
            completeSound.play();
        }

        // Mise à jour des stats si c'était une session de focus
        if (currentMode === 'focus' || currentMode === 'long') {
            stats.completedSessions++;
            stats.totalMinutes += totalTime / 60;
            saveStats();
            updateStats();
        }

        // Notification
        showNotification();

        // Auto-démarrage de la pause si activé
        if (document.getElementById('autoStartToggle').checked) {
            setTimeout(() => {
                const nextMode = currentMode === 'focus' ? 'short' : 'focus';
                const nextBtn = document.querySelector(`[data-mode="${nextMode}"]`);
                nextBtn.click();
                startTimer();
            }, 3000);
        }
    }

    function updateDisplay() {
        const minutes = Math.floor(timeRemaining / 60);
        const seconds = timeRemaining % 60;
        timerTime.textContent = `${String(minutes).padStart(2, '0')}:${String(seconds).padStart(2, '0')}`;

        const progress = (timeRemaining / totalTime) * 100;
        progressBar.style.width = progress + '%';
    }

    function updateLabel() {
        const labels = {
            'focus': 'Session de Focus',
            'short': 'Courte Pause',
            'long': 'Deep Work Session',
            'break': 'Longue Pause'
        };
        timerLabel.textContent = labels[currentMode];
    }

    function updateStats() {
        document.getElementById('completedSessions').textContent = stats.completedSessions;
        document.getElementById('totalMinutes').textContent = stats.totalMinutes;
        document.getElementById('streakDays').textContent = stats.streakDays;
    }

    function saveStats() {
        localStorage.setItem('completedSessions', stats.completedSessions);
        localStorage.setItem('totalMinutes', stats.totalMinutes);
        localStorage.setItem('streakDays', stats.streakDays);
    }

    function showNotification() {
        if ('Notification' in window && Notification.permission === 'granted') {
            new Notification('Pomodoro Terminé!', {
                body: 'Session terminée! Prenez une pause bien méritée.',
                icon: '/favicon.ico'
            });
        }
    }

    // Demander la permission pour les notifications
    if ('Notification' in window && Notification.permission === 'default') {
        Notification.requestPermission();
    }

    // Raccourcis clavier
    document.addEventListener('keydown', (e) => {
        if (e.code === 'Space') {
            e.preventDefault();
            startBtn.click();
        } else if (e.code === 'KeyR') {
            e.preventDefault();
            resetBtn.click();
        }
    });
</script>
</body>
</html>
