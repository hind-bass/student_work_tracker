{# templates/base.html.twig - NOUVELLE VERSION AVEC PALETTE MODERNE #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gestionnaire de travaux universitaires - Organisez vos devoirs et projets">
    <meta name="author" content="University Manager">
    <title>{% block title %}Gestionnaire Universitaire{% endblock %}</title>

    {# Bootstrap 5.3 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {% block stylesheets %}
        <style>
            /* ============================================
               üé® NOUVELLE PALETTE DE COULEURS
               ============================================ */
            :root {
                --primary: #865749;      /* Brun terracotta principal */
                --accent: #C0876A;       /* Beige ros√© - accents */
                --beige: #A76048;        /* Terracotta clair - highlights */
                --darker: #2D2326;       /* Presque noir - backgrounds */
                --dark: #473D43;         /* Brun fonc√© - cartes */
                --slate: #958377;        /* Gris taupe - textes secondaires */
                --bg-light: #9f8263;     /* Fond clair cr√®me */
                --success: #6B9080;      /* Vert sauge */
                --warning: #D4A574;      /* Or chaud */
                --danger: #B85042;       /* Rouge terre cuite */
            }

            /* ============================================
               üìê STRUCTURE G√âN√âRALE
               ============================================ */
            body {
                min-height: 100vh;
                background: linear-gradient(135deg, var(--slate) 0%, var(--darker) 100%);
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
                color: #75868d;
            }

            /* ============================================
               üß≠ NAVIGATION BAR - DESIGN MODERNE
               ============================================ */
            .navbar {
                background: linear-gradient(135deg, var(--primary) 0%, var(--dark) 100%) !important;
                box-shadow: 0 4px 20px rgba(0,0,0,.3);
                border-bottom: 2px solid var(--accent);
                backdrop-filter: blur(10px);
            }

            .navbar-brand {
                font-weight: 700;
                font-size: 1.4rem;
                color: #ae8c8c !important;
                transition: all 0.3s ease;
            }

            .navbar-brand:hover {
                color: var(--accent) !important;
                transform: translateX(5px);
            }

            .navbar-brand i {
                color: var(--accent);
                font-size: 1.6rem;
            }

            /* Style des liens de navigation */
            .nav-link {
                color: rgba(255, 255, 255, 0.8) !important;
                font-weight: 500;
                padding: 0.6rem 1.2rem !important;
                border-radius: 10px;
                transition: all 0.3s ease;
                margin: 0 0.3rem;
            }

            .nav-link:hover {
                background: rgba(192, 135, 106, 0.2);
                color: var(--accent) !important;
                transform: translateY(-2px);
            }

            .nav-link.active {
                background: rgba(192, 135, 106, 0.25);
                color: var(--accent) !important;
                font-weight: 600;
            }

            .nav-link i {
                margin-right: 0.4rem;
            }

            /* Avatar utilisateur */
            .user-avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                background: linear-gradient(135deg, var(--accent), var(--beige));
                display: flex;
                align-items: center;
                justify-content: center;
                color: #81b99e;
                font-weight: 700;
                font-size: 0.95rem;
                border: 2px solid rgba(255,255,255,0.3);
                transition: all 0.3s ease;
            }

            .user-avatar:hover {
                transform: scale(1.1);
                border-color: var(--accent);
            }

            /* Dropdown menu */
            .dropdown-menu {
                background: var(--dark);
                border: 1px solid var(--accent);
                border-radius: 15px;
                padding: 0.8rem;
                box-shadow: 0 10px 30px rgba(0,0,0,0.4);
            }

            .dropdown-item {
                color: rgba(175, 153, 153, 0.9);
                border-radius: 8px;
                padding: 0.6rem 1rem;
                transition: all 0.3s ease;
            }

            .dropdown-item:hover {
                background: rgba(192, 135, 106, 0.2);
                color: var(--accent);
            }

            .dropdown-divider {
                border-color: rgba(192, 135, 106, 0.3);
            }

            /* ============================================
               üé¥ CARTES - DESIGN MODERNE
               ============================================ */
            .card {
                background: rgba(71, 61, 67, 0.6);
                backdrop-filter: blur(20px);
                border: 1px solid rgba(192, 135, 106, 0.3);
                border-radius: 20px;
                box-shadow: 0 8px 32px rgba(0,0,0,0.2);
                transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
                margin-bottom: 1.5rem;
                overflow: hidden;
            }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(192, 135, 106, 0.3);
                border-color: var(--accent);
            }

            .card-header {
                background: linear-gradient(135deg, rgba(134, 87, 73, 0.3), rgba(71, 61, 67, 0.3));
                border-bottom: 1px solid rgba(192, 135, 106, 0.2);
                color: #fff;
                font-weight: 600;
                padding: 1.2rem 1.5rem;
            }

            .card-body {
                color: rgba(255,255,255,0.95);
                padding: 1.5rem;
            }

            /* ============================================
               üìä CARTES STATISTIQUES
               ============================================ */
            .stat-card {
                background: linear-gradient(135deg, rgba(134, 87, 73, 0.2), rgba(71, 61, 67, 0.3));
                border-left: 4px solid var(--accent);
                padding: 1.8rem;
                border-radius: 15px;
                position: relative;
                overflow: hidden;
                transition: all 0.3s ease;
            }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 120px;
                height: 120px;
                background: radial-gradient(circle, rgba(192, 135, 106, 0.15), transparent);
                border-radius: 50%;
                transform: translate(30%, -30%);
            }

            .stat-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            }

            .stat-card.todo { border-left-color: var(--slate); }
            .stat-card.in-progress { border-left-color: var(--accent); }
            .stat-card.completed { border-left-color: var(--success); }

            /* ============================================
               üîò BOUTONS - STYLE MODERNE
               ============================================ */
            .btn {
                border-radius: 12px;
                font-weight: 600;
                padding: 0.7rem 1.5rem;
                transition: all 0.3s ease;
                border: none;
            }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.3);
            }

            .btn-primary {
                background: linear-gradient(135deg, var(--primary), var(--beige));
                color: white;
            }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--beige), var(--primary));
            }

            .btn-success {
                background: linear-gradient(135deg, var(--success), #5A7D6F);
            }

            .btn-outline-primary {
                border: 2px solid var(--accent);
                color: var(--accent);
                background: transparent;
            }

            .btn-outline-primary:hover {
                background: var(--accent);
                color: white;
            }

            /* ============================================
               üè∑Ô∏è BADGES
               ============================================ */
            .badge {
                font-weight: 600;
                padding: 0.5em 1em;
                border-radius: 8px;
                font-size: 0.85rem;
            }

            .bg-secondary { background-color: var(--slate) !important; }
            .bg-primary { background-color: var(--accent) !important; }
            .bg-success { background-color: var(--success) !important; }
            .bg-warning { background-color: var(--warning) !important; }
            .bg-danger { background-color: var(--danger) !important; }
            .bg-orange { background-color: var(--beige) !important; }

            /* ============================================
               üìù FORMULAIRES
               ============================================ */
            .form-control, .form-select {
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid rgba(192, 135, 106, 0.3);
                border-radius: 12px;
                color: #fff;
                padding: 0.8rem 1rem;
                transition: all 0.3s ease;
            }

            .form-control:focus, .form-select:focus {
                background: rgba(255, 255, 255, 0.1);
                border-color: var(--accent);
                box-shadow: 0 0 0 4px rgba(192, 135, 106, 0.15);
                color: #fff;
            }

            .form-control::placeholder {
                color: rgba(255,255,255,0.5);
            }

            .form-label {
                color: var(--accent);
                font-weight: 600;
                font-size: 0.9rem;
                margin-bottom: 0.5rem;
            }

            /* ============================================
               üìä BARRES DE PROGRESSION
               ============================================ */
            .progress {
                border-radius: 12px;
                height: 35px;
                background: rgba(45, 35, 38, 0.5);
                border: 1px solid rgba(192, 135, 106, 0.2);
            }

            .progress-bar {
                border-radius: 12px;
                transition: width 0.6s ease;
                font-weight: 700;
                background: linear-gradient(90deg, var(--accent), var(--beige));
            }

            /* ============================================
               ‚ö†Ô∏è ALERTES
               ============================================ */
            .alert {
                border-radius: 15px;
                border: none;
                padding: 1.2rem 1.5rem;
                backdrop-filter: blur(10px);
            }

            .alert-success {
                background: rgba(107, 144, 128, 0.2);
                border-left: 4px solid var(--success);
                color: #A8DADC;
            }

            .alert-danger {
                background: rgba(184, 80, 66, 0.2);
                border-left: 4px solid var(--danger);
                color: #FFB4A2;
            }

            .alert-warning {
                background: rgba(212, 165, 116, 0.2);
                border-left: 4px solid var(--warning);
                color: #FFE5B4;
            }

            .alert-info {
                background: rgba(192, 135, 106, 0.2);
                border-left: 4px solid var(--accent);
                color: #E8D4C0;
            }

            /* ============================================
               üì± RESPONSIVE
               ============================================ */
            @media (max-width: 768px) {
                .navbar-brand {
                    font-size: 1.1rem;
                }

                .nav-link {
                    padding: 0.5rem 1rem !important;
                }

                .card {
                    margin-bottom: 1rem;
                }
            }

            /* ============================================
               üé≠ ANIMATIONS
               ============================================ */
            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }

            .card, .stat-card {
                animation: fadeIn 0.6s ease;
            }

            /* ============================================
               ü¶∂ FOOTER
               ============================================ */
            footer {
                margin-top: auto;
                padding: 2rem 0;
                background: rgba(45, 35, 38, 0.6);
                border-top: 1px solid rgba(192, 135, 106, 0.2);
                backdrop-filter: blur(10px);
            }

            footer a {
                color: var(--accent);
                text-decoration: none;
                transition: all 0.3s ease;
            }

            footer a:hover {
                color: var(--beige);
            }
        </style>
    {% endblock %}
</head>
