{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Gestionnaire de travaux universitaires - Organisez vos devoirs et projets">
    <meta name="author" content="University Manager">
    <title>{% block title %}Gestionnaire Universitaire{% endblock %}</title>

    {# Bootstrap 5.3 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bootstrap Icons #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    {% block stylesheets %}
        <style>
            :root {
                --primary-blue: #0d6efd;
                --success-green: #198754;
                --warning-yellow: #ffc107;
                --danger-red: #dc3545;
                --info-cyan: #0dcaf0;
                --bg-light: #f8f9fa;
            }

            body {
                min-height: 100vh;
                background-color: var(--bg-light);
                font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            }

            .navbar {
                box-shadow: 0 2px 4px rgba(0,0,0,.1);
                background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%) !important;
            }

            .navbar-brand {
                font-weight: 600;
                font-size: 1.25rem;
            }

            .card {
                border: none;
                box-shadow: 0 2px 8px rgba(0,0,0,.08);
                border-radius: 12px;
                transition: all 0.3s ease;
                margin-bottom: 1.5rem;
            }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(0,0,0,.12);
            }

            .stat-card {
                border-left: 4px solid;
                padding: 1.5rem;
                position: relative;
                overflow: hidden;
            }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                width: 100px;
                height: 100px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                transform: translate(30%, -30%);
            }

            .stat-card.todo { border-left-color: #6c757d; }
            .stat-card.in-progress { border-left-color: var(--primary-blue); }
            .stat-card.completed { border-left-color: var(--success-green); }

            .priority-indicator {
                width: 4px;
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                border-radius: 4px 0 0 4px;
            }

            .assignment-card {
                position: relative;
                padding-left: 1rem;
                transition: all 0.2s ease;
                border-radius: 8px;
            }

            .assignment-card:hover {
                background-color: rgba(0,0,0,.02);
            }

            .btn {
                border-radius: 8px;
                font-weight: 500;
                transition: all 0.2s ease;
            }

            .btn:hover {
                transform: translateY(-1px);
            }

            .badge {
                font-weight: 500;
                padding: 0.4em 0.8em;
                border-radius: 6px;
            }

            .bg-orange {
                background-color: #fd7e14 !important;
            }

            .alert {
                border-radius: 10px;
                border: none;
            }

            footer {
                margin-top: auto;
                padding: 2rem 0;
                background-color: white;
                box-shadow: 0 -2px 4px rgba(0,0,0,.05);
            }

            .form-control, .form-select {
                border-radius: 8px;
                border: 1px solid #dee2e6;
                transition: all 0.2s ease;
            }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-blue);
                box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
            }

            .progress {
                border-radius: 10px;
                height: 30px;
                background-color: #e9ecef;
            }

            .progress-bar {
                border-radius: 10px;
                transition: width 0.6s ease;
                font-weight: 600;
            }

            .modal-content {
                border-radius: 12px;
                border: none;
            }

            .modal-header {
                border-radius: 12px 12px 0 0;
            }

            @media (max-width: 768px) {
                .card {
                    margin-bottom: 1rem;
                }

                .navbar-brand {
                    font-size: 1rem;
                }
            }

            .user-avatar {
                width: 35px;
                height: 35px;
                border-radius: 50%;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                color: white;
                font-weight: 600;
                font-size: 0.875rem;
            }
        </style>
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
{# Navigation Bar #}
{% if app.user %}
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_dashboard') }}">
                <i class="bi bi-journal-bookmark-fill me-2"></i>
                Gestionnaire Universitaire
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_dashboard' ? 'active' : '' }}"
                           href="{{ path('app_dashboard') }}">
                            <i class="bi bi-speedometer2 me-1"></i> Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_assignment' ? 'active' : '' }}"
                           href="{{ path('app_assignment_index') }}">
                            <i class="bi bi-card-checklist me-1"></i> Mes travaux
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_course' ? 'active' : '' }}"
                           href="{{ path('app_course_index') }}">
                            <i class="bi bi-book me-1"></i> Mes matières
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                           role="button" data-bs-toggle="dropdown">
                            <div class="user-avatar me-2">
                                {{ app.user.initials }}
                            </div>
                            <span>{{ app.user.firstName }}</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <span class="dropdown-item-text">
                                    <div class="fw-bold">{{ app.user.fullName }}</div>
                                    <small class="text-muted">{{ app.user.email }}</small>
                                </span>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i> Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endif %}

{# Flash Messages #}
<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {% if label == 'success' %}
                    <i class="bi bi-check-circle-fill me-2"></i>
                {% elseif label == 'danger' %}
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                {% elseif label == 'warning' %}
                    <i class="bi bi-exclamation-circle-fill me-2"></i>
                {% else %}
                    <i class="bi bi-info-circle-fill me-2"></i>
                {% endif %}
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{# Main Content #}
<main class="flex-grow-1">
    {% block body %}{% endblock %}
</main>

{# Footer #}
<footer class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                <p class="text-muted mb-0">
                    <i class="bi bi-journal-bookmark-fill me-1"></i>
                    © {{ 'now'|date('Y') }} Gestionnaire Universitaire
                </p>
            </div>
            <div class="col-md-6 text-center text-md-end">
                <p class="text-muted mb-0">
                    Développé avec <i class="bi bi-heart-fill text-danger"></i> et
                    <a href="https://symfony.com" target="_blank" class="text-decoration-none">Symfony</a>
                </p>
            </div>
        </div>
    </div>
</footer>

{# JavaScript #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% block javascripts %}
    <script>
        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }, 5000);
            });
        });
    </script>
{% endblock %}
</body>
</html>
