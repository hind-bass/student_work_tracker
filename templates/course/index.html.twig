{# templates/course/index.html.twig - VERSION MODERNE #}
{% extends 'base.html.twig' %}

{% block title %}Mes mati√®res - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-4">
        {# ============================================
           üìö EN-T√äTE
           ============================================ #}
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2 mb-2 text-white">
                    <i class="bi bi-book me-2" style="color: var(--accent);"></i>
                    Mes mati√®res
                </h1>
                <p class="text-white-50 mb-0">G√©rez vos cours et leurs informations</p>
            </div>
            <a href="{{ path('app_course_new') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i> Nouvelle mati√®re
            </a>
        </div>

        {% if courses is empty %}
            {# ============================================
               üì≠ √âTAT VIDE
               ============================================ #}
            <div class="text-center py-5">
                <i class="bi bi-journal-x display-1 mb-4" style="color: var(--slate);"></i>
                <h3 class="text-white mb-3">Aucune mati√®re</h3>
                <p class="text-white-50 mb-4">Commencez par cr√©er votre premi√®re mati√®re pour organiser vos travaux</p>
                <a href="{{ path('app_course_new') }}" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i> Cr√©er ma premi√®re mati√®re
                </a>
            </div>
        {% else %}
            {# ============================================
               üé¥ GRILLE DE CARTES
               ============================================ #}
            <div class="row g-4">
                {% for course in courses %}
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100">
                            {# Barre de couleur en haut #}
                            <div style="background: linear-gradient(90deg, {{ course.color }}, {{ course.color }}99); height: 8px; border-radius: 20px 20px 0 0;"></div>

                            <div class="card-body p-4">
                                {# Ic√¥ne + Nom #}
                                <div class="d-flex align-items-start mb-3">
                                    <div class="me-3" style="width: 50px; height: 50px; background: linear-gradient(135deg, {{ course.color }}33, {{ course.color }}11); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                                        <i class="bi bi-journal-text fs-4" style="color: {{ course.color }};"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1 text-white">{{ course.name }}</h5>
                                        <small class="badge" style="background-color: {{ course.color }};">
                                            {{ course.code }}
                                        </small>
                                    </div>
                                </div>

                                {# Professeur #}
                                {% if course.professor %}
                                    <p class="mb-3 text-white-50">
                                        <i class="bi bi-person me-2"></i>
                                        {{ course.professor }}
                                    </p>
                                {% endif %}

                                {# Statistiques #}
                                <div class="d-flex justify-content-between align-items-center mb-3 p-2"
                                     style="background: rgba(192, 135, 106, 0.1); border-radius: 10px;">
                                    <span class="badge" style="background: linear-gradient(135deg, var(--accent), var(--beige));">
                                        <i class="bi bi-list-check me-1"></i>
                                        {{ course.assignmentsCount }} travaux
                                    </span>
                                    <small class="text-white-50">
                                        <i class="bi bi-calendar me-1"></i>
                                        {{ course.createdAt|date('d/m/Y') }}
                                    </small>
                                </div>

                                <hr style="border-color: rgba(192, 135, 106, 0.2);">

                                {# Actions #}
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_course_show', {id: course.id}) }}"
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('app_course_edit', {id: course.id}) }}"
                                       class="btn btn-sm flex-fill"
                                       style="background: linear-gradient(135deg, var(--accent), var(--beige)); color: white; border: none;">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# ============================================
               ‚ÑπÔ∏è STATISTIQUE GLOBALE
               ============================================ #}
            <div class="alert alert-info mt-4" style="background: rgba(192, 135, 106, 0.2); border-left: 4px solid var(--accent); backdrop-filter: blur(10px);">
                <i class="bi bi-info-circle me-2"></i>
                Vous avez <strong style="color: var(--accent);">{{ courses|length }}</strong> mati√®re(s) enregistr√©e(s).
            </div>
        {% endif %}
    </div>
{% endblock %}
