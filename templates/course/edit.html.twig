{# templates/course/edit.html.twig - VERSION MODERNE #}
{% extends 'base.html.twig' %}

{% block title %}Modifier {{ course.name }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {# ============================================
                   ‚úèÔ∏è EN-T√äTE
                   ============================================ #}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h3 mb-1 text-white">
                            <i class="bi bi-pencil-square me-2" style="color: var(--accent);"></i>
                            Modifier la mati√®re
                        </h1>
                        <p class="text-white-50 mb-0">{{ course.name }}</p>
                    </div>
                    <div>
                        <a href="{{ path('app_course_show', {id: course.id}) }}" class="btn btn-outline-primary me-2">
                            <i class="bi bi-eye me-1"></i> Voir
                        </a>
                        <a href="{{ path('app_course_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Retour
                        </a>
                    </div>
                </div>

                {# ============================================
                   üìù FORMULAIRE
                   ============================================ #}
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        {{ form_start(form) }}

                        {# Nom #}
                        <div class="mb-4">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name) }}
                            <div class="text-danger small">{{ form_errors(form.name) }}</div>
                        </div>

                        {# Code #}
                        <div class="mb-4">
                            {{ form_label(form.code, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.code) }}
                            <div class="text-danger small">{{ form_errors(form.code) }}</div>
                        </div>

                        {# Professeur #}
                        <div class="mb-4">
                            {{ form_label(form.professor, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.professor) }}
                            <div class="text-danger small">{{ form_errors(form.professor) }}</div>
                        </div>

                        {# Couleur avec pr√©visualisation #}
                        <div class="mb-4">
                            {{ form_label(form.color, 'Couleur d\'identification', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="d-flex align-items-center gap-3">
                                {{ form_widget(form.color, {
                                    'attr': {
                                        'class': 'form-control form-control-color',
                                        'style': 'width: 80px; height: 50px; cursor: pointer;',
                                        'id': 'colorPicker'
                                    }
                                }) }}
                                <div class="flex-grow-1">
                                    <div id="colorPreview" class="rounded p-3 text-white text-center fw-bold" style="background-color: {{ course.color }}; border: 2px solid rgba(255,255,255,0.2);">
                                        Pr√©visualisation de la couleur
                                    </div>
                                </div>
                            </div>
                            <div class="text-danger small">{{ form_errors(form.color) }}</div>
                        </div>

                        {# Description #}
                        {% if form.description is defined %}
                            <div class="mb-4">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description) }}
                                <div class="text-danger small">{{ form_errors(form.description) }}</div>
                            </div>
                        {% endif %}

                        {# Cr√©dits et Semestre #}
                        <div class="row">
                            {% if form.credits is defined %}
                                <div class="col-md-6 mb-4">
                                    {{ form_label(form.credits, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.credits) }}
                                    <div class="text-danger small">{{ form_errors(form.credits) }}</div>
                                </div>
                            {% endif %}

                            {% if form.semester is defined %}
                                <div class="col-md-6 mb-4">
                                    {{ form_label(form.semester, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.semester) }}
                                    <div class="text-danger small">{{ form_errors(form.semester) }}</div>
                                </div>
                            {% endif %}
                        </div>

                        {# Boutons #}
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_course_show', {id: course.id}) }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i> Enregistrer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                {# ============================================
                   ‚ÑπÔ∏è INFORMATIONS
                   ============================================ #}
                <div class="card mt-3">
                    <div class="card-body" style="background: rgba(134, 87, 73, 0.2);">
                        <small class="text-white-50">
                            <i class="bi bi-info-circle me-1"></i>
                            <strong>Travaux associ√©s :</strong> {{ course.assignmentsCount }}
                            <span class="ms-3">
                                <i class="bi bi-clock-history me-1"></i>
                                <strong>Cr√©√©e le :</strong> {{ course.createdAt|date('d/m/Y') }}
                            </span>
                        </small>
                    </div>
                </div>

                {# ============================================
                   üé® SUGGESTIONS DE COULEURS
                   ============================================ #}
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="mb-3 text-white">
                            <i class="bi bi-palette me-2" style="color: var(--accent);"></i>
                            Changer rapidement la couleur
                        </h6>
                        <div class="d-flex gap-2 flex-wrap">
                            <button type="button" class="btn btn-sm" style="background-color: #865749; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#865749')" title="Brun terracotta"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #C0876A; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#C0876A')" title="Beige ros√©"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #A76048; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#A76048')" title="Terracotta"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #6B9080; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#6B9080')" title="Vert sauge"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #D4A574; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#D4A574')" title="Or chaud"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #B85042; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#B85042')" title="Rouge terre"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #958377; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#958377')" title="Gris taupe"></button>
                            <button type="button" class="btn btn-sm" style="background-color: #473D43; width: 50px; height: 50px; border-radius: 12px; border: 2px solid rgba(255,255,255,0.2);" onclick="setColor('#473D43')" title="Brun fonc√©"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block javascripts %}
        {{ parent() }}
        <script>
            // Mise √† jour de la pr√©visualisation en temps r√©el
            const colorPicker = document.getElementById('colorPicker');
            const colorPreview = document.getElementById('colorPreview');

            if (colorPicker && colorPreview) {
                colorPicker.addEventListener('input', function() {
                    colorPreview.style.backgroundColor = this.value;
                });
            }

            // Fonction pour d√©finir une couleur pr√©d√©finie
            function setColor(color) {
                if (colorPicker && colorPreview) {
                    colorPicker.value = color;
                    colorPreview.style.backgroundColor = color;
                }
            }
        </script>
    {% endblock %}
{% endblock %}
