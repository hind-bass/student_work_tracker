{# templates/course/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter une matière - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-primary text-white py-3">
                        <h1 class="h4 mb-0">
                            <i class="bi bi-journal-plus me-2"></i>Ajouter une nouvelle matière
                        </h1>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_label(form.code) }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.code) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.professor) }}
                                {{ form_widget(form.professor, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.professor) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_label(form.credits) }}
                                {{ form_widget(form.credits, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.credits) }}
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_label(form.color) }}
                                {{ form_widget(form.color, {'attr': {'class': 'form-control form-control-color w-100'}}) }}
                                {{ form_errors(form.color) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.semester) }}
                                {{ form_widget(form.semester, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.semester) }}
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_course_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i>Enregistrer la matière
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-4 text-center text-muted">
                    <small>
                        <i class="bi bi-info-circle me-1"></i>
                        Les matières vous permettent de regrouper vos devoirs et de suivre votre progression par discipline.
                    </small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
