{# templates/course/new.html.twig - VERSION MODERNE #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter une matière - {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header py-4" style="background: linear-gradient(135deg, var(--primary), var(--dark)); border-bottom: 2px solid var(--accent);">
                        <h1 class="h4 mb-0 text-white">
                            <i class="bi bi-journal-plus me-2" style="color: var(--accent);"></i>
                            Ajouter une nouvelle matière
                        </h1>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.name) }}</div>
                            </div>
                            <div class="col-md-4 mb-3">
                                {{ form_label(form.code, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.code) }}</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.professor, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.professor, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.professor) }}</div>
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_label(form.credits, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.credits, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.credits) }}</div>
                            </div>
                            <div class="col-md-3 mb-3">
                                {{ form_label(form.color, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.color, {'attr': {'class': 'form-control form-control-color w-100', 'style': 'height: 50px;'}}) }}
                                <div class="text-danger small">{{ form_errors(form.color) }}</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                            <div class="text-danger small">{{ form_errors(form.description) }}</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.semester, null, {'label_attr': {'class': 'form-label text-white'}}) }}
                                {{ form_widget(form.semester, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger small">{{ form_errors(form.semester) }}</div>
                            </div>
                        </div>

                        <hr class="my-4" style="border-color: rgba(192, 135, 106, 0.3);">

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_course_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-check-circle me-2"></i>Enregistrer la matière
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <small class="text-white-50">
                        <i class="bi bi-info-circle me-1"></i>
                        Les matières vous permettent de regrouper vos devoirs et de suivre votre progression par discipline.
                    </small>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
